<main class='main'>
  {{#with data.list}}
  <form method='POST' action='/purshase-success?id={{id}}' class="form-card">

    {{>heading title='Зміна данних'}}

    {{>form-text label='ID' text=id }}
    {{>field label="Ім'я" name ='firstname' value=firstname}}
    {{>field label="Призвіще" name ='lastname' value=lastname}}
    {{>field label="Телефон" name ='phone' value=phone}}
    {{>field label="Пошта" name ='email' value=email}}

    {{>divider}}

    {{>button text='Змінити данні'}}
  </form>
  {{/with}}
</main>