{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class="main">
    <secction class="page-container">
        {{> heading title="Інформація про товар" }}
        {{#with data.product}}

        <form method="POST" action="/purchase-create?id={{id}}">
            <div class="product-info">
                <img src={{img}} alt="{{title}}" class="product-info__img">
                <div class="product-info__info">
                    <h2 class="product-info__title">{{title}}</h2>
                    <p class="product-info__subtitle">{{description}}</p>
                    {{>divider}}
                    {{#each category}}
                    <span class="product-info__category product-info__category--{{id}}">{{text}}</span>
                    {{/each}}
                    {{>divider}}
                    {{> field label="Кількість" type="number" name='amount' value="1"}}

                    {{>button text='Купти зараз:' price=price}}
                </div>
            </div>
        </form>
        {{/with}}
    </secction>
    <secction class="page-container">

        {{> heading title="Інші товари з даної категорії" info="Комп'ютери та ноутбуки"}}
        
        <div class="product-list">
            {{#each data.list}}
            {{> purchase-product data=this}}
            {{/each}}
        </div>
    </secction>
</main>



